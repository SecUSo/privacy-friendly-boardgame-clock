<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/current_players_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:layout_weight="1" />

    <Button
        android:id="@+id/createNewPlayerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/button_darkblue"
        android:text="@string/createNewPlayer"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:onClick="createNewPlayerButton" />

    <Button
        android:id="@+id/addPlayerContactsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_darkblue"
        android:text="@string/addPlayerFromContacts"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:onClick="addPlayerContactsButton" />

    <Button
        android:id="@+id/editPlayerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/button_darkblue"
        android:text="@string/editPlayerName"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:onClick="addPlayerContactsButton"
        android:visibility="gone"/>


</LinearLayout>
