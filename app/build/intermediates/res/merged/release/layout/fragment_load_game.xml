<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:layout_weight="1" />

    <Button
        android:id="@+id/deleteGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_grey"
        android:onClick="deleteGameButton"
        android:text="@string/deleteGame"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/loadGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="@dimen/main_button_padding"
        android:layout_marginRight="@dimen/main_button_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_grey"
        android:onClick="loadGameButton"
        android:text="@string/loadSelectedGame"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

</LinearLayout>
